{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_module",
    "tests",
    "src/**/seeders/*",
    "passwords.js",
    "websocket.js"
  ]
}
